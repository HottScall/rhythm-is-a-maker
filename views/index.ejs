<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto:300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/index.css">
    <title></title>
  </head>
  <body>
    <div id='title-container'>
      <h1>Rhythm Is A Maker <i class="fab fa-spotify logo"></i></h1>
    </div>

    <div class="instruction-container container">
      <ul id='instructions'>
        <li>Click on the buttons to compose your beat.</li>
        <li>Press the play button to start the loop.</li>
        <li>Press the stop button to end the loop.</li>
      </ul>
    </div>

    <hr>
    <div class="on-container">
      <i class="fas fa-play powerOn"></i>
      <i class="fas fa-stop-circle stop"></i>
    </div>
  <div class="table-div">
    <table>
      <tr>
        <th><button id='button-11'onclick="toggleButton(this)" class='button row-1' type="button">Kick</button></th>
        <% for (let i = 0; i < 15; i++) { %>
        <th><button id='button-1<%= i + 2 %>'onclick="toggleButton(this)" class='button row-1' type="button"></button></th>
        <% } %>
      </tr>
      <tr>
        <th><button id='button-21'onclick="toggleButton(this)" class='button row-2' type="button">Snare  </button></th>
        <% for (let i = 0; i < 15; i++) { %>
        <th><button id='button-2<%= i + 2 %>'onclick="toggleButton(this)" class='button row-2' type="button"></button></th>
        <% } %>
      </tr>
      <tr>
        <th><button id='button-31'onclick="toggleButton(this)" class='button row-3' type="button">Hi-hat</button></th>
        <% for (let i = 0; i < 15; i++) { %>
        <th><button id='button-3<%= i + 2 %>'onclick="toggleButton(this)" class='button row-3' type="button"></button></th>
        <% } %>
      </tr>
      <tr>
        <th><button id='button-41'onclick="toggleButton(this)" class='button row-4' type="button">Open Hi-hat</button></th>
        <% for (let i = 0; i < 15; i++) { %>
        <th><button id='button-4<%= i + 2 %>'onclick="toggleButton(this)" class='button row-4' type="button"></button></th>
        <% } %>
      </tr>
      <tr>
        <th><button id='button-51'onclick="toggleButton(this)" class='button row-5' type="button">Clap</button></th>
        <% for (let i = 0; i < 15; i++) { %>
        <th><button id='button-5<%= i + 2 %>'onclick="toggleButton(this)" class='button row-5' type="button"></button></th>
        <% } %>
      </tr>
      <tr>
        <th><button id='button-61'onclick="toggleButton(this)" class='button row-6' type="button">Cowbell</button></th>
        <% for (let i = 0; i < 15; i++) { %>
        <th><button id='button-6<%= i + 2 %>'onclick="toggleButton(this)" class='button row-6' type="button"></button></th>
        <% } %>
      </tr>
      <tr>
        <th><button id='button-71'onclick="toggleButton(this)" class='button row-7' type="button">whitney</button></th>
        <% for (let i = 0; i < 15; i++) { %>
        <th><button id='button-7<%= i + 2 %>'onclick="toggleButton(this)" class='button row-7' type="button"></button></th>
        <% } %>
      </tr>
      <tr>
        <th><button id='button-81'onclick="toggleButton(this)" class='button row-8' type="button">james_b</button></th>
        <% for (let i = 0; i < 15; i++) { %>
        <th><button id='button-8<%= i + 2 %>'onclick="toggleButton(this)" class='button row-8' type="button"></button></th>
        <% } %>
      </tr>
      <tr id='conter-container'>
        <% for (let i = 0; i < 16; i++) { %>
        <th><div class='counter' id='c-<%= i %>'></div></th>
        <% } %>
      </tr>
    </table>
   </div>
   <div class="keyboard-container">
     <div class="keyboard">
       <button type="button" class="keyboard-key white-key" id='C4' data-key='65'></button>
       <button type="button" class="keyboard-key black-key Db4-key" id='Db4' data-key='87'></button>
       <button type="button" class="key white-key D4-key"></button>
       <button type="button" class="key black-key Eb4-key"></button>
       <button type="button" class="key white-key E4-key"></button>
       <button type="button" class="key white-key F4-key"></button>
       <button type="button" class="key black-key Gb4-key"></button>
       <button type="button" class="key white-key G4-key"></button>
       <button type="button" class="key black-key Ab4-key"></button>
       <button type="button" class="key white-key A4-key"></button>
       <button type="button" class="key black-key Bb4-key"></button>
       <button type="button" class="key white-key B4-key"></button>
       <button type="button" class="key white-key C5-key"></button>
       <button type="button" class="key black-key Db5-key"></button>
       <button type="button" class="key white-key D5-key"></button>
       <button type="button" class="key black-key Eb5-key"></button>
       <button type="button" class="key white-key E5-key"></button>
     </div>
   </div>

    <script src="/javaScript/socket.js"></script>
    <script src="/javaScript/BeatPlayer.js"></script>
    <script src="https://unpkg.com/tone"></script>
    <script
    src="https://code.jquery.com/jquery-3.4.1.js"
    integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
    crossorigin="anonymous"></script>
    <script src="/javaScript/tone.js"></script>
    <script src="/javaScript/sequence.js"></script>
    <script src='/javaScript/keyboard.js'></script>
  </body>
</html>
